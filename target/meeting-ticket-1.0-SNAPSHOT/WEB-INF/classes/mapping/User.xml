<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.brickjs.dao.UserDao">

  <select id="selectUserById" resultType="com.brickjs.entity.User">
    SELECT * FROM user WHERE id=#{id}
  </select>
  
  <select id="selectUserByName" resultType="com.brickjs.entity.User">
    SELECT * FROM user WHERE name=#{name}
  </select>
  
  <insert id="insertUser" parameterType="com.brickjs.entity.User">
  	INSERT INTO user(
  		name,
  		age
  	) VALUES (
  		#{name},
  		#{age}
  	)
  </insert>
  
</mapper>
