<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.brickjs.dao.UserDao">

	<!-- 邮箱查询用户 -->
	<select
		id="findUserByEmail"
		resultType="User"
	>
		SELECT * FROM user WHERE email=#{email}
	</select>
  
</mapper>
